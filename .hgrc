[ui]
username = Jake Rothenbuhler <jake.rothenbuhler@invitae.com>
merge = Kaleidoscope

[extensions]
pager =
progress =
color =
shelve =
hgext.extdiff =

[extdiff]
cmd.ksdiff = /usr/local/bin/ksdiff
opts.ksdiff = --changeset --filelist

[merge-tools]
Kaleidoscope.executable = /usr/local/bin/ksdiff
Kaleidoscope.args = --merge --output $output --base $base -- $local $other

[pager]
pager = LESS='FRX' less
